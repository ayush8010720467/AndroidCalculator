<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#000000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ayush.calculater.MainActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#000000">
        <TextView
            android:fontFamily="casual"
            android:id="@+id/expression"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:textSize="20sp"


            android:textColor="#ffffff"/>
        <TextView
            android:fontFamily="casual"

            android:background="#000000"
            android:id="@+id/expression_result"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:textColor="#ffffff"
            android:textSize="60sp"


            android:layout_alignParentBottom="true"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backspace"
            android:src="@drawable/backspace"
            android:padding="0dp"



            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/one"
            android:layout_width="125sp"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#ffffff"
            android:background="#003333"
            />
        <Button
            android:id="@+id/two"
            android:textSize="30dp"
            android:layout_width="125sp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#ffffff"
            android:background="#003333"
            />
        <Button
            android:textSize="30dp"
            android:id="@+id/three"
            android:layout_width="135sp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#ffffff"
            android:background="#003333"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:textSize="30dp"
            android:id="@+id/four"
            android:text="4"
            android:textColor="#ffffff"
            android:background="#003333"
            android:layout_width="125sp"
            android:layout_height="wrap_content"
            />
        <Button
            android:textSize="30dp"
            android:text="5"
            android:id="@+id/five"
            android:textColor="#ffffff"
            android:background="#003333"
            android:layout_width="125sp"
            android:layout_height="wrap_content"
            />
        <Button
            android:textSize="30dp"
            android:text="6"
            android:id="@+id/six"
            android:textColor="#ffffff"
            android:background="#003333"
            android:layout_width="135sp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="7"
            android:textSize="30dp"
            android:id="@+id/seven"
            android:textColor="#ffffff"
            android:background="#003333"
            android:layout_width="125sp"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/eight"
            android:text="8"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:background="#003333"
            android:layout_width="125sp"
            android:layout_height="wrap_content"
            />
        <Button
            android:text="9"
            android:textSize="30dp"
            android:id="@+id/nine"
            android:textColor="#ffffff"
            android:background="#003333"
            android:layout_width="135sp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="+"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:background="#003333"
            android:id="@+id/plus"
            android:layout_width="125sp"
            android:layout_height="wrap_content"
            />
        <Button
            android:text="0"
            android:textSize="30dp"
            android:id="@+id/zero"
            android:textColor="#ffffff"
            android:background="#003333"
            android:layout_width="125sp"
            android:layout_height="wrap_content"
            />
        <Button
            android:textSize="30dp"
            android:text="="
            android:textColor="#ffffff"
            android:background="#003333"
            android:id="@+id/equal"
            android:layout_width="135sp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="-"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:background="#003333"
            android:layout_width="125sp"
            android:layout_height="wrap_content"
            android:id="@+id/minus"
            />
        <Button
            android:textSize="30dp"
            android:text="*"
            android:id="@+id/multiply"
            android:textColor="#ffffff"
            android:background="#003333"
            android:layout_width="125sp"
            android:layout_height="wrap_content"
            />
        <Button
            android:text="/"
            android:textSize="30dp"
            android:id="@+id/div"
            android:textColor="#ffffff"
            android:background="#003333"
            android:layout_width="135sp"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
</LinearLayout>
